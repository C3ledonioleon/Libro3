@page
@model NetflixLibrosRazor.Pages.IndexModel
@{
    ViewData["Title"] = "NetflixDeLibros";
}

@section Styles {
    <link rel="stylesheet" href="~/css/style.css" />
}

<h1 class="titulo">NetflixDeLibros</h1>

<div class="login-box">
    <h2>Inicio de Sesión</h2>

    <form method="post">
        <label class="colorlabel" for="email">Correo Gmail:</label>
        <input type="email" id="email" name="Email" asp-for="LoginDto.Email" required pattern=".+@@gmail\.com">

        <label class="colorlabel" for="password">Contraseña:</label>
        <input type="password" id="password" name="Password" asp-for="LoginDto.Password" required>

        <input type="submit" value="Iniciar Sesión">

        <p>¿No tienes cuenta? <a asp-page="/Usuarios/Registro">Regístrate aquí</a></p>
    </form>
</div>

@section Scripts {
    <!-- scripts específicos del login si hacen falta -->
}
