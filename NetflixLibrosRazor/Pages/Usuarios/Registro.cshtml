@page
@model NetflixLibrosRazor.Pages.Usuarios.RegistroModel
@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="mb-4 text-center">Registro de Usuario</h2>

    @if (!string.IsNullOrEmpty(Model.Mensaje))
    {
        <div class="alert alert-info">@Model.Mensaje</div>
    }

    <form method="post">
        <div class="mb-3">
            <label asp-for="RegisterDto.Email" class="form-label">Correo electrónico</label>
            <input asp-for="RegisterDto.Email" class="form-control" placeholder="ejemplo@correo.com" />
            <span asp-validation-for="RegisterDto.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="RegisterDto.Contraseña" class="form-label">Contraseña</label>
            <input asp-for="RegisterDto.Contraseña" type="password" class="form-control" placeholder="Ingrese su contraseña" />
            <span asp-validation-for="RegisterDto.Contraseña" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Registrarse</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
